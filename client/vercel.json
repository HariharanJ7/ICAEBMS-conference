{
  "version": 2,
  "builds": [
    { "src": "client/package.json", "use": "@vercel/static-build", "config": { "distDir": "dist" } },
    { "src": "api/server.js", "use": "@vercel/node" },
    { "src": "api/seed/seedContent.js", "use": "@vercel/node" }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "api/server.js" },
    { "src": "/(.*)", "dest": "client/dist/$1" },
    { "src": "/(.*)", "dest": "client/dist/$1" }
  ]
}
